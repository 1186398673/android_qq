<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:id="@+id/new_card"
    >

    <!-- 卡片标题输入框 -->
    <EditText
        android:id="@+id/editTextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入标题"
        android:inputType="text"
        android:padding="16dp"
        />

    <EditText
        android:id="@+id/editTextLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入等级"
        android:inputType="text"
        android:padding="16dp"
        />
    <!-- 图标选择 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择图标"
        android:textSize="16sp"
        android:layout_marginTop="16dp" />

    <RadioGroup
        android:id="@+id/radioGroupIcons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioIcon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@mipmap/user" />

        <RadioButton
            android:id="@+id/radioIcon2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:button="@mipmap/user" />

        <RadioButton
            android:id="@+id/radioIcon3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@mipmap/user" />

            <RadioButton
                android:id="@+id/radioIcon4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@mipmap/user" />
            <RadioButton
                android:id="@+id/radioIcon5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@mipmap/user" />



    </RadioGroup>
    <RadioGroup
        android:id="@+id/radioGroupIcons2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/radioIcon6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@mipmap/user" />
        <RadioButton
            android:id="@+id/radioIcon7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@mipmap/user" />
        <RadioButton
            android:id="@+id/radioIcon8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@mipmap/user" />
        <RadioButton
            android:id="@+id/radioIcon9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@mipmap/user" />
        <RadioButton
            android:id="@+id/radioIcon10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@mipmap/user" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroupIcons3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/radioIcon11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@mipmap/user" />
        <RadioButton
            android:id="@+id/radioIcon12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@mipmap/user" />
        <RadioButton
            android:id="@+id/radioIcon13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@mipmap/user" />
        <RadioButton
            android:id="@+id/radioIcon14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@mipmap/user" />
        <RadioButton
            android:id="@+id/radioIcon15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@mipmap/user" />
    </RadioGroup>




</LinearLayout>