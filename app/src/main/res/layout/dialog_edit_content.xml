<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 内容输入 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="标题">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 定义输入 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutDefine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="定义"
            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextDefine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 意义输入 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutMeaning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="意义"
            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextMeaning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 适用范围输入 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutRange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="适用范围"
            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextRange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 例子输入 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutExample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="例子"
            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextExample"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 例子输入 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="等级"
            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
</ScrollView>