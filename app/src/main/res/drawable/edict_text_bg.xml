<?xml version="1.0" encoding="utf-8"?>
    <!-- 默认状态 -->
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle"> <!-- 关键形状设置 -->

        <!-- 填充色 -->
        <solid android:color="#FFFFFF" />

        <!-- 边框 -->
        <stroke
            android:width="1dp"
            android:color="#CCCCCC" />

        <!-- 圆角设为 0 实现直角 -->
        <corners android:radius="0dp" />

        <!-- 内边距 -->
        <padding
            android:bottom="8dp"
            android:left="12dp"
            android:right="12dp"
            android:top="8dp" />
    </shape>
